{
    "name": "symplate/project",
    "type": "project",
    "description": "A boilerplate for building modern WordPress projects.",
    "keywords": ["framework", "wordpress", "symplate"],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "composer/installers": "^2.3",
        "illuminate/collections": "^11.39",
        "illuminate/config": "^11.39",
        "illuminate/filesystem": "^11.39",
        "illuminate/support": "^11.39",
        "roots/bedrock-autoloader": "^1.0.4",
        "roots/wordpress": "^6.7",
        "roots/wp-password-bcrypt": "^1.2"
    },
    "require-dev": {
        "symfony/var-dumper": "^7.2"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org",
            "only": [
                "wpackagist-plugin/*",
                "wpackagist-theme/*"
            ]
        }
    ],
    "autoload": {
        "files": [
        ],
        "psr-4": {
            "App\\": "app/",
            "Symplate\\": "framework/src/Symplate/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "extra": {
        "installer-paths": {
            "public/mu-plugins/{$name}": [
                "type:wordpress-muplugin"
            ],
            "public/plugins/{$name}": [
                "type:wordpress-plugin"
            ],
            "public/themes/{$name}": [
                "type:wordpress-theme"
            ]
        },
        "wordpress-install-dir": "public/wp"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "roots/wordpress-core-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
