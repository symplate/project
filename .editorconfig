root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.php]
indent_size = 4

[composer.json]
indent_size = 4

[*.scss]
indent_size = 2

[*.blade.php]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
